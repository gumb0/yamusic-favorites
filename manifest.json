{
  "manifest_version": 2,

  "name": "Яндекс.Музыка Избранное",
  "description": "Удобное сохранение в закладки страниц исполнителей, альбомов, треков.",
  "version": "1.0.1",

  "icons": { 
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon.png" },

  "background": { "scripts": ["common.js", "background.js"] },

  "permissions" : [
      "bookmarks",
      "tabs"
  ],
  
  "page_action": {
    "default_icon": {
      "19": "icons/bw19.png",
      "38": "icons/bw38.png"
    },
    "default_title": "Яндекс.Музыка Избранное",
    "default_popup": "popup.html"
  }
}